<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:clickable="true">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="@dimen/size_app_icon"
        android:layout_height="@dimen/size_app_icon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/keyline_margin"
        android:layout_marginStart="@dimen/keyline_margin"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/appLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="@dimen/keyline_content"
        android:layout_marginRight="16dp"
        android:layout_marginStart="@dimen/keyline_content"
        android:layout_toLeftOf="@+id/appDragHandle"
        android:layout_toStartOf="@+id/appDragHandle"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="24dp"
        android:paddingTop="20dp"
        android:text="@string/app_name"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/appDragHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.5"
        android:padding="16dp"
        android:src="@drawable/ic_drag_handle" />

</RelativeLayout>