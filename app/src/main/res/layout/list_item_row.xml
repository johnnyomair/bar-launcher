<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/layout_row"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/keyline_margin"
        android:layout_marginStart="@dimen/keyline_margin"
        android:layout_toLeftOf="@id/drag_handle"
        android:layout_toStartOf="@id/drag_handle"
        android:orientation="horizontal" />

    <ImageView
        android:id="@id/drag_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:alpha="0.5"
        android:contentDescription="@string/content_description_drag_handle"
        android:padding="16dp"
        android:src="@drawable/ic_drag_handle" />

</RelativeLayout>
